@using Book_Movie_Tickets.Models
@model IEnumerable<Cinema>

<div>
    <h2>Cinema List</h2>
    <a href="/Admin/Cinema/Create" class="btn btn-sm btn-success">Create<br></a>
    <hr >
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Img</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Img</td>
                        <td>
                        <a href="/Admin/Cinema/Edit/@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/Admin/Cinema/Delete/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>

</div>

@section Scripts{

    @if (@TempData["sucess-Notification"] is not null)
    {
        <script>
            toastr.success['@TempData["sucess-Notification"]'];
        </script>
    }
    else if (@TempData["error-Notification"] is not null)
    {
        <script>
            toastr.error['@TempData["error-Notification"]'];
        </script>
    }
}