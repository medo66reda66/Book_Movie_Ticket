@using Book_Movie_Ticket.MovieVM
@model MovieVM
<div>
    <h2>Create Movie </h2>
    <form method="post" enctype="multipart/form-data">
        <input type="hidden" name="@Model.Movie.Id" value="@Model.Movie.Id" />
        <label for="">Movie Name</label>
        <input type="text" class="form-control" placeholder="Name" name="Name" /><br />
        <label for="">Movie Description</label>
        <input type="text" class="form-control" placeholder="Description" name="Description" /><br />
        <label for="">Movie Price</label>
        <input type="number" class="form-control" placeholder="Price" name="Price" /><br />
        <label for="">Movie DateTime</label>
        <input type="datetime-local" class="form-control" placeholder="Datetime" name="Datetime" /><br />
        <div class="mb-3">
            <label for="MainImg" class="form-label">movie Img</label>
            <input type="File" class="form-control" id="MainImg" name="MainImg" accept="Actorimg/*"
                   onchange="previewImage(event)" />
        </div>
        <div class="mb-3">
            <img id="preview"
                
                 src="~/Movieimg/@Model.Movie.MainImg"
                 alt="Current Files"
                 style="max-width: 200px; border:1px solid #ccc; padding:5px; border-radius:10px;"     />
        </div>

        <div class="mb-3">
            <label for="SupImg" class="form-label">movie SupImg</label>
            <input type="File" class="form-control" id="SupImg" name="SupImg" multiple  /> 
        </div> 
        <select name="CategoryId" class="form-control">
            <option>--Select Category--</option>
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <br />
        <select name="CinemaId" class="form-control">
            <option>--Select Cinema--</option>
            @foreach(var cinema in Model.Cinemas)
            {
                <option value="@cinema.Id">@cinema.Name</option>
            }
        </select>
        <br />
        <label for="">Select Actor</label><br />
        <select name="Actors" multiple class="form-control" >
            <option>--Select Actor--</option>
            @foreach (var actor in Model.Actors)
            {
                <option value="@actor.Id">@actor.FullName</option>
            }
        </select>
        <br />
        <label for="">Movie Status</label><br />
        <select  name="Status" class="form-select">
            @if (Model.Movie.Status)
            {
                <option value="true" selected>Active</option>
                <option value="false">InActive</option>
            }
            else
            {
                <option value="true">Active</option>
                <option value="false">InActive</option>
            }
        </select>
        <br />
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

<script>
    function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById("preview");

        if (input.files && input.files[0]) {
            const reader = new FileReader();

            reader.onload = function(e) {
                preview.src = e.target.result; // الصورة الجديدة
            }

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
