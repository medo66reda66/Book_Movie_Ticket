@using Book_Movie_Ticket.MovieVM
@model MovieVM

<h2>🎬 Filter Movies</h2>

<form class="border p-3 rounded bg-light mb-4">
    <div class="row" >
        <div class="col-md-3">
            <label>Name</label>
            <input type="text" placeholder="movie name" name="name" class="form-control" value="@ViewBag.name" />
        </div>

        <div class="col-md-2">
            <label>Min Price</label>
            <input type="number" step="0.01" name="minprice" class="form-control" value="@ViewBag.minprice" />
        </div>

        <div class="col-md-2">
            <label>Max Price</label>
            <input type="number" step="0.01" name="maxprice" class="form-control" value="@ViewBag.maxprice" />
        </div>

        <div class="col-md-2">
            <label>Category</label>
            <select name="categoryid" class="form-select">
                <option>-- All category name  --</option>

                @foreach(var item in Model.Categories)
                {
                    if (item.Id == ViewBag.categoryid)
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
                
            </select>
        </div>

        <div class="col-md-2">
            <label>Cinema</label>
            <select name="cinemaid" class="form-select">
                <option >-- All cinema name --</option>

                @foreach (var item in Model.Cinemas)
                {
                    if (item.Id == ViewBag.cinemaid)
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }

            </select>
            <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" id="statusCheck" name="status" value="true" @(ViewBag.status is not null && ViewBag.status ? "checked" : "" )>
                <label class="form-check-label" for="statusCheck">status</label>
            </div>
        </div>

        <div class="col-md-2 d-flex align-items-end mt-3">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </div>
</form>

<div>
    <h2>Movies</h2>
    <a href="/Admin/Movie/Create" class="btn btn-sm btn-success">Create<br></a>
    <hr>
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>MainImg</th>
                <th>Cinema name</th>
                <th>Category name</th>
                <th>Datetime</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("c")</td>
                    <td>@item.MainImg</td>
                    <td>@item.Cinema.Name</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Datetime</td>
                    @if (item.Status)
                    {
                        <td><span class="badge text-bg-success">Active</span></td>
                    }
                    else
                    {
                        <td><span class="badge text-bg-danger">Inactive</span></td>
                    }
                    <td>
                        <a href="/Admin/Movie/Edit/@item.Id" type="button" class="btn btn-warning">Edit</a>
                        <a href="/Admin/Movie/Delete/@item.Id" type="button" class="btn btn-danger btn-delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>