@using Book_Movie_Tictet.Models
@model IEnumerable<Category>

<div>
    <h2>Category List</h2>
    <a href="/Category/Create" class="btn btn-sm btn-success">Create<br></a>
    <hr >
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                        <a href="/Category/Edit/@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/Category/Delete/@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
        </tbody>
    </table>
</div>