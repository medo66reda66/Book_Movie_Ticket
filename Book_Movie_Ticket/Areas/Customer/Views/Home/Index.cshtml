@using Book_Movie_Tickets.Models
@model IEnumerable<Movie>

<div class="container">

    <h1 style="text-align:center; margin-top:20px;">Show All Movies 🎬</h1>

    <h5>🎬 Filter Movies</h5>

    <form class="border p-3 rounded bg-light mb-4">
        <div class="row">
            <div class="col-md-3">
                <label>Name</label>
                <input type="text" placeholder="movie name" name="name" class="form-control" value="@ViewBag.name" />
            </div>

            <div class="col-md-2">
                <label>Min Price</label>
                <input type="number" step="0.01" name="minprice" class="form-control" value="@ViewBag.minprice" />
            </div>

            <div class="col-md-2">
                <label>Max Price</label>
                <input type="number" step="0.01" name="maxprice" class="form-control" value="@ViewBag.maxprice" />
            </div>

            <div class="col-md-2">
                <label>Category</label>
                <select name="categoryid" class="form-select">
                    <option>-- All category name  --</option>

                    @foreach (var item in ViewBag.category)
                    {
                        if (item.Id == ViewBag.categoryid)
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }

                </select>
            </div>

            <div class="col-md-2">
                <label>Cinema</label>
                <select name="cinemaid" class="form-select">
                    <option>-- All cinema name --</option>

                    @foreach (var item in ViewBag.cinema)
                    {
                        if (item.Id == ViewBag.cinemaid)
                        {
                            <option value="@item.Id" selected>@item.Name</option>
                        }
                        else
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    }

                </select>

                <div class="form-check form-check-inline mt-2">
                    <input class="form-check-input mt-1" type="checkbox" id="statusCheck" name="status"
                           value="true" @(ViewBag.status is not null && ViewBag.status ? "checked" : "")>
                    <label class="" for="statusCheck">Status Active</label>
                </div>

            </div>

            <div class="col-md-2 d-flex align-items-end mt-0">
                <button type="submit" class="btn btn-primary w-50">Filter</button>
            </div>
        </div>
    </form>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
              
                @foreach(var item in Model)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Category badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">@item.Category.Name</div>
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; left: 0.5rem">@item.Cinema.Name</div>
                           
                            @* <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; left: 0.5rem"></div> *@

                            <!-- Product image-->
                            <img class="card-img-top" src="~/Movieimg/@item.MainImg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@item.Name</h5>
                                    <!-- Actors-->
                                    @* @foreach (var Actor in ViewBag.actors)
                                    {
                                        <h6>Actor: @Actor.Actor.FullName</h6>
                                    } *@
                                    <!-- Product price-->
                                    <span class="text-muted text">@item.Price.ToString("c")</span>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="Customer/Home/Item/@item.Id">Add to cart</a></div>
                            </div>
                        </div>
                    </div>

                   }
            </div>

            @* <div class="row">
                <nav aria-label="Page navigation example" style="justify-content: center;display: flex;">
                    <ul class="pagination">
                        @if (@ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&name=@ViewBag.Name&minPrice=@ViewBag.minPrice&maxPrice=@ViewBag.maxPrice&categoryId=@ViewBag.categoryId&brandId=@ViewBag.brandId&IsHot=@ViewBag.IsHot">Previous</a></li>
                        }
                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item"><a class="page-link" href="?page=@i&name=@ViewBag.Name&minPrice=@ViewBag.minPrice&maxPrice=@ViewBag.maxPrice&categoryId=@ViewBag.categoryId&brandId=@ViewBag.brandId&IsHot=@ViewBag.IsHot">@i</a></li>
                        }
                        @if (@ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item"><a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&name=@ViewBag.Name&minPrice=@ViewBag.minPrice&maxPrice=@ViewBag.maxPrice&categoryId=@ViewBag.categoryId&brandId=@ViewBag.brandId&IsHot=@ViewBag.IsHot">Next</a></li>
                        }
                    </ul>
                </nav>
            </div> *@
        </div>
    </section>
</div>

